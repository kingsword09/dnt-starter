{
  "tasks": {
    "build": "deno run -A ./scripts/npm.ts",
    "pub": "deno run --unstable -A ./scripts/pub.ts"
  },
  "compilerOptions": {
    "allowJs": false,
    "lib": [
      "deno.unstable",
      "deno.window"
    ],
    "strict": true,
    "strictNullChecks": true
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-namespace"
      ]
    }
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 120,
      "indentWidth": 2,
      "singleQuote": false,
      "proseWrap": "preserve"
    }
  },
  "imports": {
    "dnt": "jsr:@deno/dnt",
    "std_path": "jsr:@std/path"
  }
}
