{
  "tasks": {
    "build": "deno run -A ./scripts/npm.ts",
    "pub": "deno run --unstable -A ./scripts/pub.ts"
  },
  "compilerOptions": {
    "allowJs": false,
    "lib": [
      "deno.unstable",
      "deno.window"
    ],
    "strict": true,
    "strictNullChecks": true
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-namespace"
      ]
    }
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 120,
      "indentWidth": 2,
      "singleQuote": false,
      "proseWrap": "preserve"
    }
  },
  "imports": {
    "dnt": "https://deno.land/x/dnt@0.38.0/mod.ts",
    "std_path": "https://deno.land/std@0.197.0/path/mod.ts"
  }
}
